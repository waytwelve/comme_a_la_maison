<div class="row">
  
       <div class="col-md-3">
  
             <ul class="sidebar-list">
  
                    <li class="sidebar-item"><%= link_to "Mes Repas", meals_path, class: "sidebar-link active" %></li>
  
             </ul>
  
        </div>
  
        <div class="col-md-9">
  
             <div class="panel panel-default">
  
                  <div class="panel-heading">Mes Repas
  
                  </div>
  
   
                 <div class="panel-body">
  
                       <% @meals.each do |meal| %>
  
                          <div class="row">
  
                                  <div class="col-md-2">
  
                                    <%= cl_image_tag meal.photo, :width=>84, :height=>64, :crop=>"scale" %> 
  
                                  </div>                              
  
                                  <div class="col-md-5 text-center">
  
                                         <h4><%= meal.name %></h4>
  
                                  </div>                              
  
                                  <div class="col-md-5 right">
  
                                      <%= link_to "Voir", meal_path(meal), class: "btn btn-success btn-sm" %>
                                      <%= link_to "Mettre Ã  jour", edit_meal_path(meal), class: "btn btn-primary btn-sm" %>
                                      <%= link_to "Supprimez", meal_path(meal), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: 'Sur ?'} %>
  
                                  </div>
  
                         </div>
  
                         <hr>
  
                    <% end %>
  
                </div>
  
            </div>
  
      </div>
  
  </div>