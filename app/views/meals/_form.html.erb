<div class="col-sm-8 col-sm-offset-2">
        <div class="panel panel-primary text-center" style="margin-top: 15px;">
        <div class="panel-heading">
            <h3><%= image_tag("tray", height: '64', width: '64') %> Votre plat</h3> 
        </div>
        <div class="panel-body">
        <%= form_for @meal do |f| %>
                <div class="form-group">
                    <%= f.text_field :name, placeholder: "Titre du Repas", class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.select :category, [["Occidental",'Occidental'], ["Oriental",'Oriental'],
                    ["Africaine", 'Africaine'], ["Asiatique",'Asiatique']], 
                    prompt: "Type de cuisine", class: "form-control" %>
                    <%= f.country_select :country, prompt: "Pays d'origine", class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.text_area :description, rows:4, placeholder: "Description du Repas", class: "form-control" %>
                </div>
                <div class="form-group">
                        <label>Mes photos</label>
                        <%= f.file_field :photo %>
                        <%= f.hidden_field :photo_cache %>
                    </div>
                <div class="form-group">
                        <div class="input-group">
                                <%= f.text_field :price, placeholder: "Prix par portion ex: 4€", class: "form-control" %>
                                <div class="input-group-addon">€</div>
                        </div>
                        
                </div>
                <div class="form-group">
                    <%= f.check_box :is_active %> Annonce active
                </div>
                        
                <div class="actions">
                    <%= f.submit "Je valide mon annonce", class: "btn btn-primary"%>
                </div>
        <% end %>
        </div>
</div>


